<h1>New location</h1>

<% form_for(@location) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location_type_id %><br />
    <%= collection_select :location, :location_type_id, @location_types, :id, :name %>
  </p>
  <p>
    <%= f.label :parent_location_id %><br />
    <%= collection_select :location, :parent_location_id, Location.find(:all, :conditions => ["id != ?", @location.id]), :id, :name %>
  </p>
  <p>
    <%= f.label :bluetooth_mac %><br />
    <%= f.text_field :bluetooth_mac %>
  </p>
  <p>
    <%= f.label :wifi_mac %><br />
    <%= f.text_field :wifi_mac %>
  </p>
  <p>
    <%= f.label :lat %><br />
    <%= f.text_field :lat %>
  </p>
  <p>
    <%= f.label :lng %><br />
    <%= f.text_field :lng %>
  </p>
  <p>
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :hide %><br />
    <%= f.check_box :hide %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', locations_path %>
