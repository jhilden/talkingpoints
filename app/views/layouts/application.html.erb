<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= request.host %> :: <%= controller.controller_name %>.<%= controller.action_name %></title>
  <%= stylesheet_link_tag 'screen' %>
  <%= stylesheet_link_tag 'screen2' %>  
	<!--<link type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/themes/base/jquery-ui.css" rel="stylesheet" />-->
	<link type="text/css" href="/css/custom-theme/jquery-ui-1.8.1.custom.css" rel="Stylesheet" />
	
	<script type="text/javascript">
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-16270314-1']);
	  _gaq.push(['_setDomainName', '.talking-points.org']);
	  _gaq.push(['_trackPageview']);
	
	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	</script>
	
	<script type='text/javascript'>
	  window._auth_token_name = "<%= request_forgery_protection_token %>";
	  window._auth_token =      "<%= form_authenticity_token %>";
	</script>
	
	<script type="text/javascript" src="http://www.google.com/jsapi?key=ABQIAAAACYmNKKpiTg0l7RVm77QbPRTrvHe6Vt5Tqs0FzuZEaX-q0oWxURT47HH0p9LX-CmXcg7LJkuThY9IHw"></script>
	<%= javascript_include_tag 'application' %>
</head>
<body class="ui-helper-reset">

<div class="header">
	<div class="search">
	<form action="/locations/search" method="get">
		<input type="text" name="q" />
		<input type="image" src="images/search.gif" width="22px" height="22px" alt="Search" class="search_button" />
	</form>
	</div>

	<div class="header_bar">
	<div class="menu_bar">
	<a href="<% root_path %>"><img src="images/logo.jpg" id="logo" /></a>
	<ul class="menu">
	<li><a href="#">How It Works</a>
		<ul>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>		
		<li><a href="#">Item</a></li>
		</ul>
	</li>
	<li><%= link_to 'Locations', locations_path %>
		<ul>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>		
		<li><a href="#">Item</a></li>
		</ul>
	</li>
	<li><a href="#">Get Involved</a>
		<ul>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>
		<li><a href="#">Item</a></li>		
		<li><a href="#">Item</a></li>
		</ul>
	</li>
	</ul>	
	<div class="secondary_menu">
		<%= link_to 'About', about_path %>|
		<%= link_to 'Blog', blog_path %>|
		<a href="#">News</a>
	</div>
	</div>
	</div>
</div>

<div class="body">
<div class="columns">

	<div class="right_column">
		<div class="right_box">
		<div class="box">
			<form method="post" action="<% login_path %>">
			<label for="login_id">User ID</label>
			<input type="text" name="login[id]" value="" />
			<label for="login_password">Password</label>
			<input type="password" name="login[password]" value="" />		
			<input type="submit" name="action[login]" value="Log In" />
			<div class="links"><a href="<% register_path %>">Register Account</a><br /><a href="#">Forgot User ID / Password</a></div>
			</form>
		</div>
		</div>
		<div class="featured">
			<a href="#">Learn about the project</a>
			<%= link_to 'Read our blog', blog_path %>
		</div>
	</div>
	<div class="left_column">
      <% if ["locations", "sections", "comments", "location_types"].include?(controller.controller_name) %>
      <ul id="breadcrumb_nav">
        <li><%= link_to "Locations", locations_path %></li>
        <% if @location and @location.id %>
          <li>> <%= link_to @location.name, @location %></li>
        <% end %>
        <% if controller.controller_name == "sections" %>
          <li>> <%= link_to "Sections", location_sections_path(@location) %></li>
          <% if @section and @section.id %>
            <li>> <%= link_to @section.name, location_section_path(@location, @section) %></li>
          <% end %>
        <% elsif controller.controller_name == "comments" %>
          <li>> <%= link_to "Comments", location_comments_path(@location) %></li>
          <% if @comment and @comment.id %>
            <li>> <%= link_to @comment.title, location_comment_path(@location, @comment) %></li>
          <% end %>
        <% elsif controller.controller_name == "location_types" %>
          <li>> <%= link_to "Types", location_types_path(@location) %></li>
          <% if @location_type %>
            <li>> <%= link_to @location_type.name, @location_type %></li>
          <% end %>
        <% end %>
      </ul>
      <% end %>
			
      <% if flash.length > 0 %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
        
      <%= yield %>  
	</div>
</div>
<div class="footer">
	&copy; 2010 Talking Points | <%= link_to 'Contact Us', contact_path %>
</div>
</div>


