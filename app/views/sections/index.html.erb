<h1>Listing sections</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th>Location</th>
    <th>User</th>
  </tr>

<% @location.sections.each do |section| %>
  <tr>
    <td><%=h section.name %></td>
    <td><%=h section.text %></td>
    <td><%=h section.location_id %></td>
    <td><%=h section.user_id %></td>
    <td><%= link_to 'Show', location_section_path(@location, section) %></td>
    <td><%= link_to 'Edit', edit_location_section_path(@location, section), :class => 'edit' %></td>
    <td><%= link_to 'Delete', location_section_path(@location, section), :class => 'delete', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New section', new_location_section_path(@location) %>