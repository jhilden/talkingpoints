<h1>Editing comment</h1>

<% form_for(@comment, :url => location_comment_path(@location, @comment)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', location_comment_path(@location, @comment) %> |
<%= link_to 'Back', location_comments_path(@location) %>